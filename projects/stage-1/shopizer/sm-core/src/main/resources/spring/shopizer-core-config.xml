		</beans:bean>
	</beans:beans>
	
	<beans:beans profile="cloud">
		<beans:bean
			class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<beans:property name="ignoreUnresolvablePlaceholders"
				value="false" />
